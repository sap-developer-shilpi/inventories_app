<% obj.each do |location| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="location-title">
         Location at: <%= location.loc_name.upcase %>
        </div>
        <%= link_to "Show", location_path(location), class: "btn btn-primary btn-xs" %>
        <%= link_to "Edit", edit_location_path(location), class: "btn btn-primary btn-xs" %>
        <%= link_to "Delete location", location_path(location), method: :delete, 
                                 data: {confirm: "Are you sure you want to delete this location?"},
                                 class: "btn btn-danger btn-xs" %>
      </div>
    </div> 
  </div>  
<% end %>
     