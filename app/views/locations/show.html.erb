<div class="card well col-xs-10 col-xs-offset-2">
   <div align="center">
     <h2 class="card-header">Location: <%= @location.loc_name %></h2>
   </div>
   <div class="card-body" >
     <div class="float-left">
      Location code: <%= @location.loc_code %></br>
      Contact person:<%= @location.primary_representative %>
     </div>
     <div class="col-md-2 col-md-offset-2 center">
       <%= gravatar_for @location %>
     </div>
     <div class="float-right">
      Tel:.<%= @location.phone %></br>
      Email:<%= @location.email %></br>
       visit us at: <%= (@location.address.building_num.to_s)+ '   ' +(@location.address.street)+ ' ' +(@location.address.city)+ ' ' +(@location.address.pin_code.to_s) %>
     </div>
   </div>
   <div class="location-edit-button">
     <%= link_to "Edit", edit_location_path(@location), class: "btn btn-primary btn-xs" %>
     <%= link_to "Delete location", location_path(@location), method: :delete, 
                                 data: {confirm: "Are you sure you want to delete this location?"},
                                 class: "btn btn-danger pull-right btn-xs" %>
   </div>
</div>







  